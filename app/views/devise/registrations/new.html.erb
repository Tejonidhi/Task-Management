<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, autofocus: true, class: 'form-control' %>
    <% if resource.errors[:email].any? %>
      <div class="text-danger"><%= resource.errors[:email].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <% if resource.errors[:password].any? %>
      <div class="text-danger"><%= resource.errors[:password].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, class: 'form-label' %>
    <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    <% if resource.errors[:password_confirmation].any? %>
      <div class="text-danger"><%= resource.errors[:password_confirmation].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Sign up", class: 'btn btn-primary' %>
    <%= link_to "Back", :back, class: 'btn btn-secondary ml-2' %>
  </div>
<% end %>
