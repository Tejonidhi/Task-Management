<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, autofocus: true, class: 'form-control' %>
    <% if resource.errors[:email].any? %>
      <div class="text-danger"><%= resource.errors[:email].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    <% if resource.errors[:password].any? %>
      <div class="text-danger"><%= resource.errors[:password].first %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.check_box :remember_me, class: 'form-check-input' if devise_mapping.rememberable? %>
    <%= form.label :remember_me, class: 'form-check-label' %>
  </div>

  <div class="form-group">
    <%= form.submit "Log in", class: 'btn btn-primary' %>
    <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-secondary ml-2' %>
  </div>
<% end %>
